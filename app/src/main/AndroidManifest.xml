<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.olympics.easypay"
    android:targetSandboxVersion="1"
    >
    <!-- <uses-feature -->
    <!-- android:name="android.hardware.camera2" -->
    <!-- android:required="true" -->
    <!-- /> -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ui.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        >
        <activity
            android:name=".ui.menu.help.HelpActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.menu.about.AboutActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />

        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true"
            /> <!-- <activity android:name=".ui.StripeActivity"> -->
        <!--  -->
        <!-- </activity> -->
        <activity
            android:name=".ui.CheckoutActivityJava"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.CheckoutActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.card.CardActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.card.CardDeleteActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.card.CardAddActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.qrcode.QrActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.menu.settings.SettingsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.history.HistoryActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.wizard.WizardActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.registration.SignInActivity"
            android:hardwareAccelerated="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.registration.SignUpActivity"
            android:hardwareAccelerated="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.services.bus.BusPaymentActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.services.metro.MetroPaymentActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.services.train.TrainPaymentActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.home.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>