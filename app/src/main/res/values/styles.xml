<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tealish</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/aquamarine</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingExtra">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle7">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.6</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle3">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle4">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle6">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.6</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:tint">@android:color/black</item>
    </style>

</resources>
